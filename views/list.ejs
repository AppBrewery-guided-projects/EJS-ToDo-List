<%- include("header") -%>

<body>
    <div class="box" id="heading">

        <h1> <%= typeOfList %> </h1>

    </div>

    <div class="box">

        
            <% for (var i = 0; i< items.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p> <%= items[i] %> </p>
            </div>
            <% } %>
        

        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New item">
            <button type="submit" name="list" value=<%= typeOfList %>>+</button>
        </form>

    </div>
    <script src="app.js"></script>

</body>

